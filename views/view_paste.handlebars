<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">{{paste.title}}</div>
            <div class="panel-body">
            	<div class="form-group">
					<pre id="pastetext">{{paste.pastetext}}</pre>
           		</div>
           		<button class="btn btn-primary" onclick="copy()">Copy</button><br>
           		<form action="/delete_paste/{{paste.id}}" method="GET" role="form" class="form-group">
           			<button type="submit" class="btn btn-primary">Delete</button><br>
           		</form>
            </div>
        </div>
    </div>
</div>



